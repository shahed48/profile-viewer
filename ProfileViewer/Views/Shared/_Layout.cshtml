<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    <link href="@Url.Content("~/Content/site.css")" type="text/css" rel="stylesheet" />
    <script src="@Url.Content("~/Scripts/jquery-3.5.1.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")"></script>
    <script src="@Url.Content("~/Scripts/modernizr-2.8.3.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/Scripts/app/app.js")"></script>

</head>
<body style="background-color: #e5e5e5;">
    <div class="loader">
        <img src="@Url.Content("~/Content/loader.gif")" alt="" />
    </div>
    <div class="wrapper">
        @Html.Partial("_LoginPartial")
        <div class="main-content">
            @RenderBody()
        </div>
    </div>

</body>
</html>
